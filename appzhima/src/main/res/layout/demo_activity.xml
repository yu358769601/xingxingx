<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="@dimen/logon_width_height"
        android:layout_height="@dimen/logon_width_height"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/logo_margin_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/button_margin_top">
        <Button
            android:id="@+id/auth_test"
            android:layout_width="match_parent"
            android:text="@string/auth_text"
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/button_margin_left_right"
            android:layout_marginRight="@dimen/button_margin_left_right"
            android:background="@drawable/button_client"/>


    </LinearLayout>

</LinearLayout>
