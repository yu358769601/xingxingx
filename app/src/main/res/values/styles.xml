        <item name="android:padding">@dimen/size_base480_10dp</item>
        <item name="android:background">@drawable/long_button_touming</item>
    </style>

    <!--出来不暗色的dialog-->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>    </style>

    <!--注册登录输入框样式-->
    <style name="edit_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawableLeft">@dimen/size_base480_10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--注册登录输入框样式-->
    <style name="edit_style_uptop">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/size_base480_10dp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--自定义对话框dalog-->
    <style name="text_18_ffffff">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_16_666666">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="sdw_white">
        <item name="android:shadowColor">#7fffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="text_15_ffffff_sdw" parent="@style/sdw_79351b">
        <item name="android:textSize">@dimen/size_base480_18dp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_15_666666_sdw" parent="@style/sdw_white">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 背景是否黑色-->  
        <item name="android:backgroundDimEnabled">false</item>  
    </style>


    <style name="text_witle_padding">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/size_base480_15dp</item>
    </style>

    <!--选择用什么获取图片-->
    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">  
        <!-- 边框 -->  
        <item name="android:windowFrame">@null</item>  
        <!-- 是否浮现在activity  false 是全的   true 是左右会留一点 -->  
        <item name="android:windowIsFloating">true</item>  
      <!--  &lt;!&ndash;点外面消失&ndash;&gt;
        <item name="android:windowCloseOnTouchOutside">true</item>-->
        <!-- 半透明 -->  
        <item name="android:windowIsTranslucent">true</item>  
        <!-- 无标题 -->  
        <item name="android:windowNoTitle">true</item>  
        <!-- 背景透明 -->  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <!-- 模糊 -->  
        <item name="android:backgroundDimEnabled">true</item>  
        <!--全屏-->
        <item name="android:windowFullscreen">false</item>
        <!--动画-->
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
    </style>  
    <!--分享里面的样式-->

    <style name="AnimBottom">  
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <!-- <item name="android:activityOpenExitAnimation">@anim/hold</item>-->
        <item name="android:activityCloseEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_buttom_out</item>
        <!--      <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>  
             <item name="android:windowExitAnimation">@anim/push_buttom_out</item>-->  
    </style> 


