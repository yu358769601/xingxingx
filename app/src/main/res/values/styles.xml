<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>



    <style name="dingdan">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">14sp</item>
    </style>
    
    
    <style name="button_touming">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size_base480_10dp</item>
        <item name="android:background">@drawable/an</item>
        <item name="android:textColor">@drawable/textcoloer_button</item>
        <item name="android:drawablePadding">@dimen/size_base480_20dp</item>
    </style>
    <style name="button_touming_long">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/textcoloer_button</item>
        <item name="android:padding">@dimen/size_base480_10dp</item>
        <item name="android:background">@drawable/an_long</item>
    </style>
    <style name="radiobutton_touming_long">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_base480_18dp</item>
        <item name="android:textColor">@drawable/text_coloer</item>
        <item name="android:padding">@dimen/size_base480_10dp</item>
        <item name="android:background">@drawable/an_long_radiobutoon</item>
    </style>
    <style name="edtext_touming_long">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white</item>
