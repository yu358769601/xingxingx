<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.xinxinxuedai.ui.ChoiceActivity">
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_money_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/choice_tv1"
            android:gravity="center_horizontal"
            android:text="拍照"
            android:padding="@dimen/size_base480_20dp"
            android:textSize="16sp"

            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view1"
            android:layout_below="@+id/choice_tv1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            ></View>
        <TextView
            android:id="@+id/choice_tv2"
            android:layout_below="@+id/view1"
            android:gravity="center_horizontal"
            android:text="从相册中选择"
            android:padding="@dimen/size_base480_20dp"
            android:textSize="16sp"

            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
