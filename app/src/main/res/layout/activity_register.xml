<?xml version="1.0" encoding="utf-8"?>
<com.xinxinxuedai.view.initAction_Bar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"

    tools:context="com.xinxinxuedai.ui.RegisterActivity">
    <!--注册xml-->
    <ImageView
        android:id="@+id/register_iv"
        android:layout_below="@+id/relativeLayout_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_base480_20dp"
        android:padding="@dimen/size_base480_20dp"
        android:background="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@+id/register_iv"
        android:padding="@dimen/size_base480_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/register_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/register_et_phonenum"
                android:layout_width="0dp"
                style="@style/edit_style"
                android:hint="手机号"
                android:layout_weight="3"
                android:drawableLeft="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/register_cunttime"
                android:layout_below="@+id/relativeLayout_title"
                android:background="@drawable/an_long"
                android:text="验证码"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="@dimen/size_base480_20dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/view_1"
            android:layout_below="@+id/register_ll"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            ></View>
        <EditText
            android:id="@+id/register_et_cunttime"
            android:layout_below="@+id/view_1"
            style="@style/edit_style"
            android:hint="验证码"
            android:drawableLeft="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            />
        <View
            android:id="@+id/view_2"
            android:layout_below="@+id/register_et_cunttime"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            ></View>
        <EditText
            android:id="@+id/register_et_passwrold"
            android:layout_below="@+id/view_2"
            style="@style/edit_style"
            android:hint="密码"
            android:drawableLeft="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            />
        <View
            android:id="@+id/view_3"
            android:layout_below="@+id/register_et_passwrold"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            ></View>
        <EditText
            android:id="@+id/register_et_passwrold_ok"
            style="@style/edit_style"
            android:layout_below="@+id/view_3"
            android:hint="确认密码"
            android:drawableLeft="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            />
        <TextView
            android:id="@+id/register_ok_"
            android:text="确认注册"
            android:layout_marginTop="@dimen/size_base480_10dp"
            android:layout_below="@+id/register_et_passwrold_ok"
            android:padding="@dimen/size_base480_20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/an_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/register_ok_again"
            android:text="确认重置"
            android:padding="@dimen/size_base480_20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/an_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</com.xinxinxuedai.view.initAction_Bar>
