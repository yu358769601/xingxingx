<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/xuedai_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_base480_20dp"
                android:layout_marginTop="@dimen/size_base480_10dp"
                android:background="@drawable/border_money_touming"
        >
   <LinearLayout
       android:id="@+id/xuedai_button_2_ll"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/xuedai_button_2_balance_of_account"
           android:hint="账户余额:"
           android:textColorHint="@color/white"
           android:textColor="@color/white"

           android:layout_width="0dp"
           android:layout_weight="4"
           android:layout_height="wrap_content"/>

       <TextView
            android:id="@+id/xuedai_button_2_top_up"
            android:text="充值"
            style="@style/button_touming"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
   </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_marginTop="@dimen/size_base480_10dp"
        android:layout_marginBottom="@dimen/size_base480_10dp"
        android:layout_below="@+id/xuedai_button_2_ll"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0.5dp">

    </View>


    <LinearLayout
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xuedai_button_2_tv1"
            android:gravity="center"
            android:padding="@dimen/size_base480_10dp"
            android:text="借款协议"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/xuedai_button_2_tv2"
            android:gravity="center"
            android:text="服务协议"
            android:padding="@dimen/size_base480_10dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/ll2"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/size_base480_10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xuedai_button_2_info"
            android:layout_weight="4"
            android:text="没有逾期,可以提前还款!"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_2_tiqian"
            style="@style/button_touming"
            android:text="提前结清"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/xuedai_button_2_borrow_money"
                android:hint="借款金额:"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/size_base480_5dp"
                android:layout_marginBottom="@dimen/size_base480_20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/xuedai_button_2_return_the_principal"
                android:hint="借款方式:"
                android:textColorHint="@color/white"
                android:layout_marginBottom="@dimen/size_base480_20dp"
                android:textColor="@color/white"
                android:layout_below="@+id/xuedai_button_2_borrow_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/xuedai_button_2_rightbutton_fenqi"
            android:hint="月分期\n"
            android:textColorHint="@color/white"
            style="@style/button_touming"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </LinearLayout>

</RelativeLayout>