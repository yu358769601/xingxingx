<?xml version="1.0" encoding="utf-8"?>
<com.xinxinxuedai.view.initAction_Bar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guanyuwomen"
    tools:context="com.xinxinxuedai.ui.AboutUsActivity">
    <!--关于我们xml-->
    <TextView
        android:id="@+id/about_us_tv_1"
        android:layout_below="@+id/relativeLayout_title"

        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_base480_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/titleinfo"
        />
    <TextView
        android:id="@+id/about_us_tv_2"
        android:textColor="@color/darkgrey"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/size_base480_10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about_us_tv_1"
        android:gravity="center_horizontal"
        android:text="如果您在申请和使用中过程中\n遇到问题,可关注我们的"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_us_tv_2_2"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/size_base480_10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about_us_tv_2"
        android:gravity="center_horizontal"
        android:text="微信公众号&quot;星星学贷&quot;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/about_us_tv_2_3"
        android:textColor="@color/darkgrey"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/size_base480_20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about_us_tv_2_2"
        android:gravity="center_horizontal"
        android:text="我们有专职客服人员,为您提高服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/about_us_tv_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_base480_100dp">

    </View>

    <TextView
        android:id="@+id/about_us_tv_4"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/size_base480_10dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:drawableLeft="@drawable/phoneinfo"
        android:textColor="@color/white"
        android:text="\t\t\t客服服务电话:400-967-5600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_us_tv_3"
        android:padding="@dimen/size_base480_30dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="3dp"
        android:text="\t\t\t&quot;星星学贷&quot;是黑龙江启辰资产管理有限公司推出的转为在校大学生(专科及以上)退出的信用借款服务,旨在帮助学生解决资金压力,提前实现自己的梦想.\n1分钟申请10分钟审核,24小时内放款.\n无抵押,无贷款,纯信用借款."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</com.xinxinxuedai.view.initAction_Bar>
