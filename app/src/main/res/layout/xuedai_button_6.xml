<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/xuedai_button_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_base480_5dp"
                android:layout_margin="@dimen/size_base480_10dp"
                android:background="@drawable/border_money_touming"
        >
        <TextView
            android:id="@+id/xuedai_button_6_tv1"
            style="@style/zaifenqi"
            android:hint="审核状态:"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_6_tv2"
            android:layout_below="@+id/xuedai_button_6_tv1"
            android:hint="分期金额:"
            style="@style/zaifenqi"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_6_tv3"
            android:layout_below="@+id/xuedai_button_6_tv2"
            android:hint="利息:"
            style="@style/zaifenqi"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_6_tv4"
            android:layout_below="@+id/xuedai_button_6_tv3"
            android:hint="手续费:"
            style="@style/zaifenqi"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_6_tv5"
            android:layout_below="@+id/xuedai_button_6_tv4"
            android:hint="服务费:"
            style="@style/zaifenqi"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_6_tv6"
            android:layout_below="@+id/xuedai_button_6_tv5"
            android:hint="申请时间:"
            style="@style/zaifenqi"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xuedai_button_6_tv7"
            android:layout_below="@+id/xuedai_button_6_tv6"
            android:hint="放款时间:"
            style="@style/zaifenqi"
            android:padding="@dimen/size_base480_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</RelativeLayout>