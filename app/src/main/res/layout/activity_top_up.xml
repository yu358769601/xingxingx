<?xml version="1.0" encoding="utf-8"?>
<com.xinxinxuedai.view.initAction_Bar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.xinxinxuedai.ui.TopUpActivity">
    <RelativeLayout
        android:id="@+id/topup_rl"
        android:padding="@dimen/size_base480_10dp"
        android:layout_below="@+id/relativeLayout_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/topup_title"
            android:gravity="center"
            android:text="友情提示:充值金额最低10元"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/View1"
            android:layout_below="@+id/topup_title"
            android:background="@color/grey"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_base480_10dp"
            android:layout_width="match_parent"
            >

        </View>

        <LinearLayout
            android:id="@+id/topup_ll1"
            android:layout_below="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topup_tv1"
                android:text="金\t额"
                android:padding="@dimen/size_base480_10dp"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
   <!--         <item name="android:textColor">@color/black</item>
            <item name="android:gravity">left</item>
            <item name="android:layout_centerVertical">true</item>
            <item name="android:padding">@dimen/size_base480_10dp</item>
            <item name="android:textColorHint">@color/grey</item>
            <item name="android:drawableLeft">@dimen/size_base480_10dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@android:color/transparent</item>-->
            <EditText
                android:id="@+id/topup_ed1"
                style="@style/edit_style_uptop"
                android:hint="请输入金额"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/View2"
            android:layout_below="@+id/topup_ll1"
            android:background="@color/grey"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_base480_10dp"
            android:layout_width="match_parent"
            >

        </View>
        <LinearLayout
            android:id="@+id/topup_ll2"
            android:layout_below="@+id/View2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topup_tv2"
                android:text="卡\t号"
                android:padding="@dimen/size_base480_10dp"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/topup_ed2"
                android:hint="请输入卡号"
                style="@style/edit_style_uptop"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/View3"
            android:layout_below="@+id/topup_ll2"
            android:background="@color/grey"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_base480_10dp"
            android:layout_width="match_parent"
            >

        </View>
        <LinearLayout
            android:id="@+id/topup_ll3"
            android:layout_below="@+id/View3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topup_tv3"
                android:text="姓\t名"
                android:padding="@dimen/size_base480_10dp"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/topup_ed3"
                android:hint="请输入姓名"
                style="@style/edit_style_uptop"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/View4"
            android:layout_below="@+id/topup_ll3"
            android:background="@color/grey"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_base480_10dp"
            android:layout_width="match_parent"
            >

        </View>
        <LinearLayout
            android:id="@+id/topup_ll4"
            android:layout_below="@+id/View4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topup_tv4"
                android:text="身份证"
                android:padding="@dimen/size_base480_10dp"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/topup_ed4"
                android:hint="请输入身份证"
                style="@style/edit_style_uptop"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/topup_tv_sub"
        android:layout_margin="@dimen/size_base480_20dp"
        android:layout_below="@+id/topup_rl"
        android:text="提交"
        style="@style/button_touming"

        android:padding="@dimen/size_base480_20dp"
        android:background="@drawable/an_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/topup_tv_info"
        android:text="查看支持银行"
        android:layout_below="@+id/topup_tv_sub"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.xinxinxuedai.view.initAction_Bar>
