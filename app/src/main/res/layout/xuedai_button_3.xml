<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/xuedai_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_base480_20dp"
                android:layout_marginRight="@dimen/size_base480_10dp"
                android:layout_marginLeft="@dimen/size_base480_10dp"
                android:layout_marginTop="@dimen/size_base480_10dp"
                android:background="@drawable/border_money_touming"
        >
    <ImageView
        android:id="@+id/xuedai_button3_iv"
        android:padding="@dimen/size_base480_20dp"
        android:background="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_toRightOf="@+id/xuedai_button3_iv"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/xuedai_button3_tv2"
                android:padding="@dimen/size_base480_20dp"
                android:layout_below="@+id/xuedai_button3_tv1"
                android:hint="已还金额:\n"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/xuedai_button3_tv1"
                android:padding="@dimen/size_base480_20dp"
                android:hint="应还金额:\n"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/xuedai_button3_tv3"
                android:layout_alignParentRight="true"
                android:hint=""
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="@dimen/size_base480_30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/xuedai_button3_tv5"
                android:text="还款"
                android:padding="@dimen/size_base480_15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/xuedai_button3_tv3"
                style="@style/button_touming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>



    <View
        android:id="@+id/view1"
        android:background="@color/white"
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>
    <TextView
        android:id="@+id/xuedai_button3_tv4"
        android:layout_below="@+id/view1"
        android:padding="@dimen/size_base480_20dp"
        android:textColor="@color/white"
        android:hint="计划还款日:"
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@+id/xuedai_button3_tv4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xuedai_button3_tv6"
            android:layout_weight="3"
            android:textColor="@color/white"
            android:padding="@dimen/size_base480_20dp"
            android:text="如果您本期还款有困难,\n可以选择再分期进行还款!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/xuedai_button3_tv7"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/size_base480_15dp"
            android:text="再分期"
            style="@style/button_touming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>